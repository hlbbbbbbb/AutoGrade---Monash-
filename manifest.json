{
  "manifest_version": 3,
  "name": "AutoGrade - Monash成绩计算器",
  "version": "1.0.0",
  "description": "自动计算Monash大学Moodle系统中的课程成绩",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://learning.monash.edu/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://learning.monash.edu/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 